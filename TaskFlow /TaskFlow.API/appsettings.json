{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=TaskFlow.db;Cache=Shared;",
    "Redis": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Debug",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "ApplicationSettings": {
    "ApplicationName": "TaskFlow API",
    "Version": "1.0.0",
    "Author": "TaskFlow Development Team",
    "FeatureFlags": {
      "EnableSwagger": true,
      "EnableDetailedErrors": true,
      "EnableCors": true,
      "EnableRequestResponseLogging": true
    },
    "ApiVersioning": {
      "DefaultVersion": "1.0",
      "AssumeDefaultVersionWhenUnspecified": true,
      "ReportApiVersions": true,
      "SupportedVersions": ["1.0"],
      "DeprecatedVersions": [],
      "VersioningStrategy": {
        "UrlPath": true,
        "QueryString": true,
        "Header": true,
        "HeaderName": "X-Version"
      }
    },
    "BusinessRules": {
      "MaxTasksPerUser": 1000,
      "MaxCategoriesPerUser": 50,
      "MaxSubTaskDepth": 5,
      "DefaultTaskPriority": "Normal"
    },
    "Performance": {
      "SlowRequestThresholdMs": 3000
    },
    "Logging": {
      "MaxBodySizeToLog": 10240
    }
  },
  "Jwt": {
    "Secret": "TaskFlow_JWT_Secret_Key_2025_Super_Secure_String_Min_32_Characters_Required_For_Security",
    "Issuer": "TaskFlow.API",
    "Audience": "TaskFlow.Client",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Cache": {
    "DefaultExpirationMinutes": 30,
    "UsersCache": {
      "ExpirationMinutes": 60,
      "KeyPrefix": "users"
    },
    "CategoriesCache": {
      "ExpirationMinutes": 120,
      "KeyPrefix": "categories"
    },
    "TasksCache": {
      "ExpirationMinutes": 15,
      "KeyPrefix": "tasks"
    },
    "StatisticsCache": {
      "ExpirationMinutes": 5,
      "KeyPrefix": "stats"
    }
  },
  "FileUpload": {
    "Avatar": {
      "MaxSizeBytes": 5242880,
      "ThumbnailSize": 64,
      "SmallSize": 128,
      "MediumSize": 256,
      "LargeSize": 512,
      "JpegQuality": 85,
      "UseProgressiveJpeg": true
    },
    "Attachment": {
      "MaxSizeBytes": 10485760
    }
  },
  "OAuth": {
    "Google": {
      "ClientId": "your-google-client-id.apps.googleusercontent.com",
      "ClientSecret": "your-google-client-secret",
      "RedirectUri": "http://localhost:3001/auth/google/callback"
    },
    "Apple": {
      "ClientId": "com.taskflow.app",
      "TeamId": "your-apple-team-id",
      "KeyId": "your-apple-key-id",
      "PrivateKey": "your-apple-private-key"
    },
    "Microsoft": {
      "ClientId": "your-microsoft-client-id",
      "ClientSecret": "your-microsoft-client-secret",
      "RedirectUri": "http://localhost:3001/auth/microsoft/callback"
    }
  },
  "Captcha": {
    "SiteKey": "",
    "SecretKey": "",
    "Threshold": 0.5
  },
  "Smtp": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "EnableSsl": true,
    "User": "seninmailadresin@gmail.com",
    "Password": "uygulama-ÅŸifresi"
  },
  "AllowedHosts": "*"
}
