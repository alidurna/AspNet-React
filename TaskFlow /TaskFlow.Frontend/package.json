{
  "name": "taskflow-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "TaskFlow Frontend - React + TypeScript + Vite",
  "author": "TaskFlow Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "analyze": "ANALYZE=true npm run build",
    "analyze:build": "vite build --mode production",
    "analyze:visualizer": "rollup-plugin-visualizer --template treemap --sourcemap --gzip",
    "build:analyze": "npm run build && npm run analyze:visualizer",
    "build:cdn": "VITE_CDN_BASE_URL=https://cdn.taskflow.com/ npm run build",
    "build:staging": "VITE_CDN_BASE_URL=https://staging-cdn.taskflow.com/ npm run build",
    "cdn:upload": "echo 'CDN upload script - integrate with AWS S3/CloudFront or your CDN provider'",
    "deploy:cdn": "npm run build:cdn && npm run cdn:upload",
    "deploy:staging": "npm run build:staging && npm run cdn:upload",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:chrome": "cypress run --browser chrome",
    "cypress:run:firefox": "cypress run --browser firefox",
    "cypress:run:headless": "cypress run --headless",
    "e2e": "start-server-and-test dev http://localhost:3000 cypress:open",
    "e2e:ci": "start-server-and-test dev http://localhost:3000 cypress:run",
    "test:e2e": "npm run e2e",
    "test:e2e:ci": "npm run e2e:ci"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.9.0",
    "@microsoft/signalr": "^8.0.7",
    "@react-oauth/google": "^0.12.2",
    "@reduxjs/toolkit": "^2.2.8",
    "@tanstack/react-query": "^5.59.0",
    "@types/recharts": "^1.8.29",
    "axios": "^1.7.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.12",
    "jwt-decode": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^5.5.0",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.26.2",
    "recharts": "^3.1.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.14.5",
    "@cypress/vite-dev-server": "^6.0.3",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/cypress": "^1.1.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.16.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "cypress": "^14.5.1",
    "eslint": "^9.12.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "jsdom": "^25.0.1",
    "nyc": "^17.1.0",
    "postcss": "^8.4.49",
    "rollup-plugin-visualizer": "^5.14.0",
    "tailwindcss": "^3.4.14",
    "terser": "^5.43.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
